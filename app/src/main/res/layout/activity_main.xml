<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f0fa"
        tools:context=".MainActivity">


    <ImageView
            android:layout_width="87dp"
            android:layout_height="87dp" app:srcCompat="@drawable/ic_popcorn"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp" android:contentDescription="TODO"/>
    <Button
            android:text="Decide"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decideButton" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:background="@color/colorPrimaryDark"
            android:textColor="@android:color/background_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seriesTitleTextView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:textSize="30sp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textCapWords|textPersonName"
            android:ems="10"
            android:id="@+id/addNewEditText"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:hint="Add new series"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/decideButton"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/seriesTitleTextView"/>
    <Button
            android:text="Add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/addNewButton" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addNewEditText" android:layout_marginTop="24dp"
            android:background="@color/colorPrimaryDark" android:textColor="@android:color/background_light"/>
</android.support.constraint.ConstraintLayout>